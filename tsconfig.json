{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "node"
  },
  "include": ["src", "./index.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true
  }
}
